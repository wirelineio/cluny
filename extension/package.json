{
  "name": "extension",
  "version": "1.0.1",
  "description": "A browser extension to securely manage accounts and addresses, for use with DXOS.org.",
  "author": "DXOS <dxos@dxos.org> (https://dxos.org)",
  "licenses": [
    {
      "type": "Apache-2"
    }
  ],
  "scripts": {
    "lint": "yarn lint:css && yarn lint:js",
    "lint:fix": "eslint --ext .js,.vue src --fix && stylelint \"src/**/*.{css,vue}\" --fix",
    "lint:js": "eslint --ext .js,.vue src",
    "lint:css": "stylelint \"src/**/*.{css,vue}\"",
    "build": "node ./scripts/check-env-variables.js && cross-env NODE_ENV=production webpack --hide-modules && node ./scripts/remove-localhost.js",
    "build:dev": "node ./scripts/check-env-variables.js && cross-env NODE_ENV=development webpack --hide-modules",
    "build-zip": "node scripts/build-zip.js",
    "initiate-submodule": "git clone https://github.com/luniehq/lunie && yarn update-submodule",
    "update-submodule": "cd lunie && git fetch --all && git checkout 2c60bd1 --force && yarn",
    "watch": "npm run build -- --watch",
    "watch:dev": "cross-env HMR=true npm run build:dev -- --watch",
    "test:unit": "jest --coverage",
    "test": "npm run lint && npm run test:unit",
    "test:e2e:build": "npm run build:dev && node ./scripts/add-pem-key.js",
    "test:e2e:build:lunie": "cd ./lunie && yarn install && npm run test:e2e:build",
    "test:e2e:start-lunie": "cd ./lunie && npm run serve:dist",
    "test:e2e": "nightwatch --config ./test/e2e/nightwatch.conf.js",
    "test:coverage": "live-server test/unit/coverage/lcov-report",
    "changelog": "simsala log --pending-path ./changes"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-prepush"
    }
  },
  "lint-prepush": {
    "base": "develop",
    "tasks": {
      "*.{js,vue}": [
        "eslint --fix",
        "jest --bail --coverage --findRelatedTests",
        "git add"
      ],
      "*.{css,vue}": [
        "stylelint --fix",
        "git add"
      ]
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.10.5",
    "@babel/runtime-corejs3": "^7.10.4",
    "@lunie/cosmos-api": "^0.0.23",
    "@lunie/cosmos-keys": "^0.3.1",
    "@polkadot/api": "^1.31.2",
    "@sentry/browser": "^5.17.0",
    "@sentry/integrations": "^5.19.2",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "2.6.8",
    "apollo-link": "1.2.14",
    "apollo-link-batch-http": "1.2.14",
    "apollo-link-persisted-queries": "0.2.2",
    "apollo-link-retry": "2.2.15",
    "apollo-link-ws": "1.0.20",
    "apollo-utilities": "1.3.4",
    "autosize": "^4.0.2",
    "bech32": "^1.1.4",
    "bignumber.js": "^9.0.0",
    "concurrently": "^4.1.1",
    "core-js": "^3.6.5",
    "graphql": "14.6.0",
    "graphql-tag": "2.11.0",
    "handlebars": ">=4.7.6",
    "moment": "^2.27.0",
    "regenerator-runtime": "^0.13.2",
    "serialize-javascript": ">=2.1.1",
    "subscriptions-transport-ws": "0.9.16",
    "vue": "^2.6.12",
    "vue-analytics": "^5.17.0",
    "vue-apollo": "3.0.3",
    "vue-clipboard2": "^0.3.0",
    "vue-directive-tooltip": "1.6.3",
    "vue-router": "^3.0.1",
    "vuelidate": "^0.7.4",
    "vuex": "^3.4.0",
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.3",
    "@vue/test-utils": "^1.0.0-beta.29",
    "archiver": "^4.0.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.0.2",
    "chromedriver": "^81.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^4.5.3",
    "cross-env": "^5.2.0",
    "css-loader": "^4.2.2",
    "ejs": "^3.1.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^6.2.2",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-prepush": "^2.1.0",
    "live-server": "^1.2.1",
    "mini-css-extract-plugin": "^0.11.0",
    "nightwatch": "^1.1.13",
    "node-sass": "^4.14.1",
    "sass-loader": "^7.1.0",
    "selenium-server": "^3.141.59",
    "simsala": "^0.0.21",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^18.3.0",
    "vue-jest": "^3.0.5",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.12",
    "web-ext-types": "^3.2.1",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.11",
    "webpack-extension-reloader": "^1.1.0"
  },
  "resolutions": {
    "handlebars": ">=4.5.2",
    "serialize-javascript": ">=2.1.1",
    "yargs-parser": ">=18.1.2",
    "minimist": ">=1.2.3"
  }
}
